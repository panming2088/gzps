<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <set>
            <objectAnimator
                android:duration="100"
                android:propertyName="textSize"
                android:valueFrom="4.3sp"
                android:valueTo="5.5sp"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="100"
                android:propertyName="boldStyle"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="intType" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:duration="100"
                android:propertyName="textSize"
                android:valueFrom="5.5sp"
                android:valueTo="4.3sp"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="100"
                android:propertyName="boldStyle"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="intType" />
        </set>
    </item>
</selector>